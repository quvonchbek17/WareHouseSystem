{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "rootDir": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./server.ts",
    "./package.json",
    "src/config/ormconfig.ts"
  ]
}
